{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/packages.lock.json": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/bin": true,
    "**/obj": true
  },

  "omnisharp.defaultLaunchSolution": "XperienceCommunity.PageLinkTagHelpers.sln",
  "omnisharp.useEditorFormattingSettings": true,
  "omnisharp.enableImportCompletion": true,

  "dotnet-test-explorer.testProjectPath": "**/*Tests.@(csproj|vbproj|fsproj)"
}
